{
  "name": "@zarpay/praxis-cli",
  "version": "1.0.1",
  "description": "CLI for the Praxis knowledge framework - organize knowledge for humans and AI agents",
  "type": "module",
  "bin": {
    "praxis": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "scaffold"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "prepublishOnly": "npm run lint && npm run typecheck && npm test && npm run build"
  },
  "keywords": [
    "praxis",
    "knowledge-framework",
    "ai-agents",
    "claude",
    "organizational-knowledge",
    "cli"
  ],
  "author": "Sebastian Scholl",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fast-glob": "^3.3.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.0",
    "msw": "^2.7.3",
    "prettier": "^3.5.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  }
}
